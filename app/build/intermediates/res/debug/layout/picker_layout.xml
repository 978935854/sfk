<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coner_picker"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"

            android:textSize="18sp"
            android:textColor="#42a664"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="请选择："/>
        </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff" >
        <com.sfk.UI.PickerView
            android:id="@+id/picker_view"
            android:layout_width="300dp"
            android:layout_height="220dp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textColor="#42a664"
            android:background="@drawable/common_btn_selector"
            android:id="@+id/exitSelect"
            android:text="取消"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#ccc"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textColor="#42a664"
            android:background="@drawable/common_btn_selector"
            android:id="@+id/centerSelect"
            android:text="确定"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Users/Administrator/AndroidStudioProjects/sfk/app/src/main/res/layout/picker_layout.xml -->