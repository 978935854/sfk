<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sfk.MainActivity"
    android:orientation="vertical">
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_fragment"
        android:layout_weight="1"
        android:name="com.sfk.fragment.Main_Fragment" />
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panic_fragment"
        android:layout_weight="1"
        android:name="com.sfk.fragment.Panic_Fragment" />
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bbs_fragment"
        android:layout_weight="1"
        android:name="com.sfk.fragment.BBS_Fragment" />
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_fragment"
        android:layout_weight="1"
        android:name="com.sfk.fragment.Person_Fragment" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:id="@+id/main_RadioGroup"
        android:orientation="horizontal"
        android:background="#ffe6e6e6">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/main"
            style="@style/rg_btn_style"
            android:id="@+id/main_radioButton"
            android:checked="true"
            android:drawableTop="@drawable/rb_one_btn_selector"
            android:layout_weight="0.25"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_main_radiobutton" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/panic"
            android:id="@+id/panic_radioButton"
            android:drawableTop="@drawable/rb_two_btn_selector"
            android:layout_weight="0.25"
            style="@style/rg_btn_style"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_main_radiobutton" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/bbs"
            android:id="@+id/bbs_radioButton"
            android:drawableTop="@drawable/rb_three_btn_selector"
            android:layout_weight="0.25"
            style="@style/rg_btn_style"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_main_radiobutton" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/person"
            android:id="@+id/person_radioButton"
            android:drawableTop="@drawable/rg_four_btn_selector"
            android:layout_weight="0.25"
            style="@style/rg_btn_style"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_main_radiobutton" />
    </RadioGroup>

</LinearLayout>
