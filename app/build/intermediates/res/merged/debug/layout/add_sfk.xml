<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/rly_title"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#42a664">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addSFMessage"
            android:id="@+id/sf_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lly_title"
            style="@style/lly_h_style">
            <TextView
                android:text="@string/title_sfk"
                style="@style/tv_left_style"/>
            <EditText
                android:id="@+id/ed_sTitle"
                style="@style/ed_input_style"/>
        </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                android:id="@+id/lly_contactWay"
                style="@style/lly_h_style">
                <TextView
                    android:text="@string/scontactway_sfk"
                    style="@style/tv_left_style" />
                <EditText
                    android:id="@+id/ed_scontactway"
                    style="@style/ed_input_style"/>
            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>
            <LinearLayout
                style="@style/lly_h_style">
                <TextView
                    android:text="@string/lasttime_sfk"
                    style="@style/tv_left_style"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <com.gdkm.sfk.view.clander.CalendarButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_lasttime"/>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                android:id="@+id/lly_yourgoods"
                style="@style/lly_h_style"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/yourgoods_sfk"
                    style="@style/tv_left_style"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="牙刷"
                            android:id="@+id/cb_yourgoods_toothbrush"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="毛巾"
                            android:id="@+id/cb_yourgoods_towel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拖鞋"
                            android:id="@+id/cb_yourgoods_slipper"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他"
                            android:id="@+id/cb_yourgoods_other"/>
                        <EditText
                            android:id="@+id/ed_yourgoods_other"
                            style="@style/ed_input_style"
                            android:layout_width="wrap_content"
                            android:minWidth="80dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                style="@style/lly_h_style"
                android:layout_height="wrap_content"
                android:minHeight="60dp">
                <TextView
                    android:text="@string/speoplenum_sfk"
                    style="@style/tv_left_style"/>
                <com.gdkm.sfk.view.CustomRadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/rg_speoplenum">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speoplenum_one"
                        android:id="@+id/rb_speoplenum_one"
                        android:checked="true"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speoplenum_two"
                        android:id="@+id/rb_speoplenum_two"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speoplenum_three"
                        android:id="@+id/rb_speoplenum_three"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speoplenum_more"
                        android:id="@+id/rb_speoplenum_more"/>

                </com.gdkm.sfk.view.CustomRadioGroup>
            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                style="@style/lly_h_style"
                android:layout_height="wrap_content"
                android:minHeight="60dp">
                <TextView
                    android:text="@string/type_sfk"
                    style="@style/tv_left_style"/>

                <com.gdkm.sfk.view.CustomRadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/rg_stype">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shafa"
                            android:checked="true"
                            android:id="@+id/rb_shafa"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room"
                            android:id="@+id/rb_room"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mat"
                            android:id="@+id/rb_mat"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/other"
                            android:id="@+id/rb_other"/>

                </com.gdkm.sfk.view.CustomRadioGroup>
            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                style="@style/lly_h_style">
                <TextView
                    android:text="@string/ssex_sfk"
                    style="@style/tv_left_style"/>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:scrollbars="none"
                    android:layout_marginLeft="8dp">
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_ssex">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/boy"
                            android:id="@+id/rb_boy"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/girl"
                            android:id="@+id/rb_girl"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/boyOrGirl"
                            android:id="@+id/rb_boyOrGirl"/>
                    </RadioGroup>
                </HorizontalScrollView>
            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                android:id="@+id/lly_address"
                style="@style/lly_h_style">

                <TextView
                    style="@style/tv_left_style"
                    android:text="@string/saddress_sfk"
                    android:id="@+id/textView5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <com.gdkm.sfk.view.AddressButton
                        android:id="@+id/btn_address"
                        style="@style/ed_input_style"
                        android:layout_width="150dp"
                        android:drawableRight="@drawable/icon_jiantouyou"
                        android:gravity="left"/>
                </LinearLayout>


            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                style="@style/lly_h_style">
                <TextView
                    style="@style/tv_left_style"
                    android:text="@string/sage_sfk"
                    android:id="@+id/textView6" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <Spinner
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/age"
                        android:id="@+id/sage"
                        style="@style/ed_input_style"
                        android:gravity="left"/>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                style="@style/lly_h_style"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/othermessage_sfk"
                    style="@style/tv_left_style"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/ed_othermessage"
                        style="@style/ed_input_style"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:gravity="top"
                        android:singleLine="false"/>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#f5f5f5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/select_photo"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/Choice"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <View style="@style/MyHorizontalLine"/>

            <RelativeLayout
                android:id="@+id/rly_addPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">
                <LinearLayout
                    android:id="@+id/lly_progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.gdkm.sfk.view.ScollGridlView
                        android:id="@+id/gv_addPhoto"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:numColumns="4"/>

                    <!--<com.gdkm.sfk.view.LineProgressBar-->
                        <!--android:id="@+id/upload_progress"-->
                        <!--style="?android:attr/progressBarStyleHorizontal"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:max="100"-->
                        <!--android:progress="0"-->
                        <!--/>-->

                </LinearLayout>

            </RelativeLayout>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="@string/addSfk"
                android:id="@+id/btn_addsf"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/green_btn_selector"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>

            <View style="@style/MyHorizontalLine"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
